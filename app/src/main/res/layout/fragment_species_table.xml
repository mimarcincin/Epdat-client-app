<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SpeciesTableFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/recHeaderTextView"

        />
    <View android:background="@color/colorPrimaryDark"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/recHeaderTextView"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/speciesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        android:paddingTop="1px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recHeaderTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>