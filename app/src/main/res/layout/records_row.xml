<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginRight="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:id="@+id/RecordIdTextView"
            android:layout_marginRight="8dp"
            android:text="ID: 42"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:id="@+id/EndopolyploidyTextView"
            android:layout_marginRight="8dp"
            android:text="Endopolyploidy: yes"/>
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TissueTextView"
            android:layout_marginRight="3dp"
            android:text="Tissue: radix"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:id="@+id/ChromosomeNumberTextView"
            android:layout_marginRight="8dp"
            android:text="Chrom. num.: 24ad"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:id="@+id/PloidyLevelTextView"
            android:layout_marginRight="3dp"
            android:text="Ploidy level: 20"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/IndexTypeTextView"
            android:layout_marginRight="8dp"
            android:text="Index type: gogogo"/>
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/NumberTextView"
            android:layout_marginRight="3dp"
            android:text="15"/>
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/SourceTextView"
            android:layout_marginLeft="10dp"
            android:text="Source: gogogo"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary" />
</LinearLayout>